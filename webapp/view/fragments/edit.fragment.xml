<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>

<Panel id="panel2"> 
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm id="SimpleFormChange3542"
            editable="true"
            layout="ResponsiveGridLayout"
            title="View"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false" >
            <f:content>
                <Label id="label12" text="Product ID" />
                <Input id="ID1" value="{odata>ProductID}" />

                <Label id="label22" text="Product Name" />
                <Input id="ID2" value="{odata>ProductName}" />

                <Label id="label32" text="Quantity Per Unit" />
                <Input id="ID3" value="{odata>QuantityPerUnit}" />

                <Label id="label42" text="Unit Price" />
                <Input id="ID42" value="{odata>UnitPrice}" />

                <Label id="label52" text="Units In Stock" />
                <Input id="ID52" value="{odata>UnitsInStock}" />

                <Label id="label62" text="Discontinued" />
                <Input id="ID62" value="{odata>Discontinued}" />

            </f:content>
        </f:SimpleForm>
    </VBox>
</Panel>
</core:FragmentDefinition>

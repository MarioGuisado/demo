<mvc:View controllerName="com.xtendhr.demo.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content> 
            <VBox id="vboxTabla">
                <Table id="idProductsTable"
                    fixedLayout="Strict"
                    autoPopinMode="true"
                    contextualWidth="Auto"
                    growing="true"
                    items="{
                        path: 'odata>/Products',
                        sorter: {
                            path: 'ProductID'
                        }
                    }">
                   
                    <columns>
                        <Column
                            width="12em">
                            <Text text="ProductID" />
                        </Column>
                        <Column
                            width="150px">
                            <Text text="ProductName" />
                        </Column>
                        <Column
                            width="10rem"
                            hAlign="Center">
                            <Text text=""/>
                        </Column>
                        <Column
                            width="10rem"
                            hAlign="Center">
                            <Text text=""/>
                        </Column>
                        <Column
                            width="10rem"
                            hAlign="Center">
                            <Text text=""/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <ObjectIdentifier id="objID"
                                    title="{odata>ProductID}"
                                    class="sapUiTinyMarginTopBottom"/>
                                <Text
                                    text="{odata>ProductName}" />

                                <Button id="viewButton" text="{i18n>view}" icon="sap-icon://detail-view" press="onView"> </Button>
                                <Button id="editButton" text= "Edit" type="Default" icon="sap-icon://edit" press="onEdit"> </Button>
                                <Button id="createButton" text= "Create" type="Default" icon="sap-icon://create" press="onCreate"> </Button>

                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>
